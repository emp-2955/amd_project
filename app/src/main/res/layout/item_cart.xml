<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/edittext_border">

    <!-- Shoe Image -->
    <ImageView
        android:id="@+id/imgShoe"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sneakspotlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@android:color/transparent"
        android:contentDescription="Remove item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Shoe Name -->
    <TextView
        android:id="@+id/tvShoeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nike Air Max"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/imgShoe"
        app:layout_constraintEnd_toStartOf="@id/btnDelete"
        app:layout_constraintTop_toTopOf="@id/imgShoe"/>

    <!-- Shoe Price -->
    <TextView
        android:id="@+id/tvShoePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹4,999"
        android:textSize="14sp"
        android:textColor="#388E3C"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@id/tvShoeName"
        app:layout_constraintTop_toBottomOf="@id/tvShoeName"/>

</androidx.constraintlayout.widget.ConstraintLayout>
